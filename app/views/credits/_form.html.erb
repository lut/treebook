<%= simple_form_for(@credit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :merchant_id, label: "Merchant", collection: Merchant.all, label_method: :name  %>
    <%= f.input :amount, label: "Cantidad"%>
    <%= f.input :user_id, label: "Usuario", collection: User.all, label_method: :full_name  %>

  </div>


  <div class="form-actions">
    <%= f.button :submit,  "Otorgar" %>
  </div>
<% end %>
